<theme>
    <formatVersion>4</formatVersion>
		<feature supported="carousel">
	<view name="system">

			<carousel name="systemcarousel">
				<color>FFFFFFcc</color>
				<logoSize>0.20 0.9</logoSize>
				<logoScale>2.0</logoScale>
			</carousel>
			
			<text name="systemInfo">
				<backgroundColor>FFFFFF99</backgroundColor>
				<color>000000</color>
				<fontSize>0.07</fontSize>
			</text>

		<image name="background" extra="true">
			<tile>true</tile>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./art/carbon_fiber.png</path>
		</image>
	
		<helpsystem name="help">
		<textColor>ffffff</textColor>
		<iconColor>be0000</iconColor>
		<fontSize>0.042</fontSize>
		</helpsystem>

		<image name="CenterFade" extra="true">
			<tile>false</tile>
			<size>1.2 0.6</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<path>./art/centerfade.png</path>
			<color>8b000050</color>
		</image>

		<image name="ControllerOverlay" extra="true">
			<color>be0000</color>
		</image>

		</view>
	</feature>

	<view name="basic">

		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/carbon_fiber.png</path>
		</image>

		<textlist name="gamelist">
			<selectorColor>1c1c1c</selectorColor>
			<selectedColor>8b0000</selectedColor>
			<primaryColor>969696</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.030</fontSize>
			<pos>0.025 0.18</pos>
			<size>0.950 0.73</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<forceUppercase>1</forceUppercase>
			<scrollSound>./sounds/se_sys_cursor.wav</scrollSound>
		</textlist>
		
		 <sound name="launch">
			<path>./sounds/se_sys_click_game.wav</path>
		</sound>


	</view>

	<view name="detailed">

		<image name="md_image">
			<pos>0.700 0.300</pos>
			<maxSize>0.453 0.436</maxSize>
			<origin>0.5 0.5</origin>
		</image>

	</view>
	
	<feature supported="video">

		<view name="video">

			<video name="md_video">
	                <origin>0.5 0.5</origin>
                        <pos>0.692 0.314</pos>
                        <maxSize>0.608 0.608</maxSize>
			<delay>1</delay>
			<default></default>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.62 0.035</pos>
				<origin>0 0</origin>
				<maxSize>0.2 0.1</maxSize>
			</image>

		</view>

	</feature>

	<view name="detailed, video">

		<image name="background">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/background_video.png</path>
		</image>


		<text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_players, md_players, md_lbl_releasedate">
			<color>969696</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.023</fontSize>
		</text>

		<text name="md_players, md_lastplayed, md_lbl_players, md_players, md_lbl_rating, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate, md_lbl_genre, md_lbl_developer">
			<pos>1 1</pos>
		</text>

		<datetime name="md_lastplayed, md_releasedate">
			<color>969696</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.023</fontSize>
		</datetime>

		<datetime name="md_releasedate">
		         <pos>.84 0.64</pos>
		         <size>0 0.045</size>
		         <color>3082ce</color>
			<fontSize>0.045</fontSize>
		</datetime>

		<text name="md_publisher">
			<fontSize>0.045</fontSize>
			<pos>0.4 0.64</pos>
			<color>fad60b</color>
			<size>0 0.045</size>
		</text>

		<text name="md_description">
			<color>aaaaaa</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.020</fontSize>
			<size>0.6 0.18</size>
			<pos>0.4 0.74</pos>
	                <fontSize>0.05</fontSize>
		</text>

		<textlist name="gamelist">
			<selectorColor>a00000</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>999999</primaryColor>
			<secondaryColor>fad60b</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<forceUppercase>0</forceUppercase>
			<pos>0.02 0.13</pos>
			<size>0.365 0.800</size>
			<alignment>left</alignment>
			<horizontalMargin>0.00</horizontalMargin>
			<fontSize>0.050</fontSize>
			<scrollSound>./sounds/se_sys_cursor.wav</scrollSound>
		</textlist>
		
		 <sound name="launch">
			<path>./sounds/se_sys_click_game.wav</path>
		</sound>

		<image name="md_hidden">
			<pos>0.823 0.700</pos>
			<path>./art/hidden.svg</path>
			<maxSize>0.032 0.032</maxSize>
			<origin>0.5 0.5</origin>
			<color>969696</color>
		</image>
		<image name="md_kidgame">
			<pos>0.883 0.700</pos>
			<path>./art/kid.svg</path>
			<maxSize>0.032 0.032</maxSize>
			<origin>0.5 0.5</origin>
			<color>969696</color>
		</image>
		<image name="md_favorite">
			<pos>0.940 0.700</pos>
			<path>./art/favorite.svg</path>
			<maxSize>0.032 0.032</maxSize>
			<origin>0.5 0.5</origin>
			<color>969696</color>
		</image>

		</view>

	<view name="basic, detailed, video">

	</view>


</theme>
